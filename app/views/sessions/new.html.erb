<% provide(:title, "Sign in") %>
<h1>Sign In</h1>

<div class="row">
  <div class="span5 offset6">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Please input your Email" %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>

      
	  <%= f.submit "Sign In", class: "btn btn-large btn-primary", id: "signin" %>
	  <ul id="signup_link">
	  	<li>New user? </li>
	  	<li><%= link_to "Sign up now!", signup_path %></li>
	  </ul>
    <% end %>

  </div>
</div>